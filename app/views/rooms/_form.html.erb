<%= render "layouts/errors", :object => @room %>

<div class="container text-center">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <%= form_for @room do |f| %>
      <%= f.datetime_select :clock, {:prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year', :hour => "Select hour", :minute => "Select minute" }}, {:class => 'form-control'}  %>
      <br>
      <%= f.text_field :description, class: 'form-control', placeholder: 'Description' %>
      <br>
      <%= f.text_field :room, class: 'form-control', placeholder: "Room" %>
      <br>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Host Name' %>
      <br>
      <%= f.submit class: 'btn btn-default'%>
    <% end %>
    </div>
  </div>
</div>
