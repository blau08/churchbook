<%= render "layouts/errors", :object => @student %>

<div class="container text-center">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @student do |f| %>
      <%= f.text_field :lastname, class: 'form-control', placeholder: 'Last Name' %>
      <br>
      <%= f.text_field :firstname, class: 'form-control', placeholder: 'First Name' %>
      <br>
      <%= f.text_field :chinesename, class: 'form-control', placeholder: 'Other Name' %>
      <br>

      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= f.label :dob_dob, 'Date of Birth' %>
          <br>
          <%= f.date_select :dob, {:order => [:month, :day, :year],:prompt => true, :start_year => 1920, :end_year => Time.now.year} %>
        </div>
      </div>
      <br>

      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= f.label :gender_gender, 'Gender' %>
          <br>
          <%= f.label :Gender_male, 'Male' %>
          <%= f.radio_button :gender, "Male" %>
          <%= f.label :Gender_female, 'Female' %>
          <%= f.radio_button :gender, "Female" %>
        </div>
      </div>

      <br>
      <%= f.text_field :countryorigin, class: 'form-control', placeholder: 'Origin Country' %>
      <br>
      <%= f.text_field :parentsorigin, class: 'form-control', placeholder: 'Parents Hometown' %>
      <br>
      <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
      <br>
      <%= f.text_field :mobile, class: 'form-control', placeholder: 'Mobile' %>
      <br>
      <%= f.text_field :occupation, class: 'form-control', placeholder: 'Occupation' %>
      <br>
      <%= f.select(:fellowship) do %>
        <%= [['Fellowship', ""], ['LED', 'LED'], ['LIGHT', 'LIGHT'], ['BULBS', 'BULBS'], ['H2O', 'H2O'], ['SOS', 'SOS'], ['EAF', 'EAF'], ['SOS', 'SOS']].each do |c| %>
        <%= content_tag(:option, c.first, value: c.last) %>
        <% end %>
      <% end %>
      <br>
      <br>
      <div class="row">
        <div class="col-md-3">
          <%= f.label :congregation_label, 'Congregation' %>
        </div>
        <div class="col-md-6">
          <%= f.label :congregation_chinese, 'Chinese' %>
          <%= f.radio_button :congregation, 'Chinese' %>
          <%= f.label :congregation_english, 'English' %>
          <%= f.radio_button :congregation, 'English' %>
          <%= f.label :congregation_mandarin, 'Mandarin' %>
          <%= f.radio_button :congregation, 'Mandarin' %>
        </div>
      </div>
      <br>
      <div class="row text-center">
        <div class="col-md-6 col-md-offset-3">
          <%= f.label :image,'Upload An Image'%>
          <div class="center">
            <%= f.file_field :image %>
          </div>
        </div>
      </div>
      <br>
      <%= f.submit class: 'btn btn-default'%>
      <% end %>
    </div>
  </div>
</div>
