<% content_for(:title, "EpicodusBook | Student") %>

<div class="container text-center">
  <div class="row">
    <header class="jumbotron hero-spacer text-center">
      <h1><%= @student.firstname + " " + @student.lastname %></h1>
    </header>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="well">
        <%= image_tag @student.image.url(:medium) %>
        <br>
        <br>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="well">
      <% if current_user %>
        <p><%= link_to "Edit", edit_student_path(@student) %></p>
      <% end %>
      <!-- <p><%= link_to "Delete", student_path(@student), :method => 'delete' %></p> -->
      <p><%= link_to "Return to students", students_path %></p>
    </div>
  </div>
</div>
