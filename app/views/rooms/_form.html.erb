<%= render "layouts/errors", :object => @room %>

<div class="container text-center">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @room do |f| %>
      <div class="form-group">
        <div class="input-group date" id='datetimepicker1'>
          <%= f.text_field :clock, class:'form-control datetimepicker', placeholder: 'Select Date / Time' %>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>
      <%= f.text_field :description, class: 'form-control', placeholder: 'Description' %>
      <br>
      <%= f.select :room, ['Sanctuary', 'Growing Hall', 'Fellowship Hall'], {:prompt => 'Select Room'}, {:class => 'form-control' } %>
      <br>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Host Name' %>
      <br>
      <%= f.submit class: 'btn btn-default'%>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
$(function () {
  $('#datetimepicker1').datetimepicker({
    format: 'DD/MM/YYYY hh:mm'
  });
});
</script>
