<div class="container">
  <div class="row text-center">
    <div class="col-md-6 col-md-offset-3">


    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: 'Email' %>
    </div>
    <br>
    <div class="field">
      <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: 'Password' %>
    </div>
    <br>
    <div class="field">
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", placeholder: 'Confirm Password' %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary", display: 'inline' %>
      <%= render "users/shared/links", display: 'inline' %>
    </div>
    <% end %>
    <br>
  </div>
  </div>
</div>
